# .coveragerc to control coverage.py
[run]
source = ./

[report]
ignore_errors = True
precision = 0
show_missing = True
skip_covered = True
exclude_lines = 
    pragma: no cover
    if __name__ == .__main__.:

omit =
    *tests*,
    *__init__*,
    *settings*
    *env*
    *__main__*

[html]
directory = coverage_html_report
